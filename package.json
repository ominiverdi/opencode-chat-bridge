{
  "name": "opencode-chat-bridge",
  "version": "0.4.0",
  "description": "Bridge OpenCode AI to chat platforms (Matrix, Slack, WhatsApp) with secure permission-based tool access",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "matrix": "bun connectors/matrix.ts",
    "slack": "bun connectors/slack.ts",
    "whatsapp": "bun connectors/whatsapp.ts",
    "cli": "bun src/cli.ts"
  },
  "keywords": [
    "opencode",
    "matrix",
    "slack",
    "chat",
    "bridge",
    "ai",
    "bot",
    "acp"
  ],
  "author": "ominiverdi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ominiverdi/opencode-chat-bridge"
  },
  "dependencies": {
    "@agentclientprotocol/sdk": "^0.13.1",
    "@slack/bolt": "^4.1.0",
    "baileys": "^7.0.0-rc.9",
    "discord.js": "^14.25.1",
    "marked": "^17.0.2",
    "matrix-bot-sdk": "^0.8.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
